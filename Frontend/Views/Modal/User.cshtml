<form 
    method="post" class="mt-3">
<input asp-for="@Model.Id" id="txtid" hidden="hidden">
<div class="form-group row">
    <label asp-for="@Model.Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="@Model.Name" class="form-control" id="name" placeholder="Full Name">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="@Model.UserName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="@Model.UserName" class="form-control" id="username" placeholder="Name">
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="@Model.Email" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="@Model.Email" class="form-control" id="email" placeholder="Email">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="@Model.PhoneNumber" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="@Model.PhoneNumber" class="form-control" id="phone" placeholder="Phone Number">
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="@Model.Address" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10"> 
        <input asp-for="@Model.Address" class="form-control" id="address" placeholder="Address">
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>
</div>.


@*<div asp-validation-summary="All" class="text-danger"></div>*@
<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" value="submit" id="btnEdit"  class="btn btn-primary"
         onclick="EditUser()">Create</button>
       

    </div>
</div>
</form>

